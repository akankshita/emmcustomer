<div class="container-fluid">
    <div class="row-fluid">
    <div class="span10">
         <!--div class="page-header">
        <h2>Add Customer</h2>
        </div-->
        <ul class="breadcrumb">
        <li><a href="#">Master</a> <span class="divider">/</span></li>
          <%if @state.id.nil?%>
            <li class="active">Add State</li>
          <%else%>
            <li class="active">Edit State</li>
          <%end%>
        </ul>
        <!--div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">?</button>
        <strong>Oh snap!</strong> Change a few things up and try submitting again.
        </div-->
        
        <%= form_for(@state,:html=>{:class=>"form-horizontal"}) do |f| %>
        <% if @state.errors.any? %>
          <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong><%=@state.errors.full_messages[0] %></strong>
          </div>
        <% end %>
        <div class="span5 well">
          <!--form class="form-horizontal"-->
        <h4>State</h4>
          <div class="control-group">
            <%= f.label :country_id,:class=>"control-label"%>
              <div class="controls">
               <%= select_tag("state[country_id]", options_from_collection_for_select(Country.all, "id", "name", params[:state_id].to_i)) %>

                <%#= select(:country, :id, (Country.all.collect{|country| [country.name]}).uniq) %>
                <%#= f.select :country_id, [['Active','0'],['Inactive','1']],{},{:class => 'span8'} %>
              </div>
          </div>        
          <div class="control-group">
            <%= f.label :name ,:class=>"control-label"%>
              <div class="controls">
                <%= f.text_field :name,:class=>"span8",:placeholder=>"State Name"%>
              </div>
          </div>
          <div class="control-group">
            <%= f.label :code,:class=>"control-label"%>
              <div class="controls">
                <%= f.text_field :code,:class=>"span8",:placeholder=>"State Code"%>
              </div>
          </div>
          <div class="control-group">
            <%= f.label :description,:class=>"control-label"%>
              <div class="controls">
                <%= f.text_area :description,:rows=>"3",:placeholder=>"Description"%>
              </div>
          </div>

          <div class="control-group">
            <%= f.label :status,:class=>"control-label"%>
              <div class="controls">
                <%= f.select :status, [['Active','0'],['Inactive','1']],{},{:class => 'span8'} %>
                <br><br>
                   <%= f.submit 'Submit',:class=>'btn'%>
              </div>
          </div>
        <!--/form-->
        </div>

        <!--/form-->
        </div>
        
        <!--/form-->
        </div>        
      <%end%>
    </div>
    </div>	
</div><!--/.fluid-container-->





