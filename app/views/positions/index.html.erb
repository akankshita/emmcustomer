      <div class="left_topform">
      <%= form_tag("/position", :method => "PUT",:name=>"cfrm" ,:id=>"cfrm") do %>
        <%=text_field_tag 'keyword',params[:keyword],:class => 'input-large search-query'%>
        <%=select_tag 'option', options_for_select([["Select Field",""],["Title","title"],["Status","status"]], params[:option])%>

      <button type="submit" class="btn btn-primary">Search</button>
      <%end%>
      </div>
      <%= form_tag("/position/action", :method => "PUT",:name=>"cfrm" ,:id=>"cfrm") do %>
      <input type="hidden" name="action_val" id ="action_val" value="">
      <div class="pull-right">
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'active');">Make Active</button>
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'inactive');">Make Inactive</button>
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'delete');">Delete</button>
      <%= link_to 'New position', new_positions_path ,:class=>"btn btn-inverse"%>
      </div>
      <div class="clearfix"></div>
      <!--div ><b> Total Number Of Records : </b><%=@positions.count%></div-->
   <%if @positions.length > 0%>
      <table class="table table-bordered table-striped">
        <thead>
			<tr>
			    <th><input type="checkbox" onclick="checkAll(document.cfrm);" name="check_all" id="check_all"></th>
			    <th>Title </th>
			    <th>Status</th>
			    <th>Create At</th>
			</tr>
        </thead>
       
        <% @positions.each do |position| %>
          <thead>
          <tr>
          <td><input type="checkbox" id="iId" value="<%=position.id%>" name="chk[]" ></td>
          <td><%= link_to position.title ,"positions/edit/#{position.id}"%></td>

          <td><%if position.status == 0%>Active<%else%>Inactive<%end%></td>
          <td><%= position.created_at.strftime("%d %B %Y  %M:%H") %></td>
        </tr>
        </thead>
      <% end %>

