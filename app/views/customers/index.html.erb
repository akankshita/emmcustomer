      <div class="left_topform">
      <form class="form-search" action="/customer" name="sfrm" id="sfrm" method="put">
        <%=text_field_tag 'keyword',params[:keyword],:class => 'input-large search-query'%>
        <%=select_tag 'option', options_for_select([["Select Field",""],["Name","name"], ["Email","email"],["Status","status"]], params[:option])%>

      <button type="submit" class="btn btn-primary">Search</button>
      </form>
      </div>
      <form class="form-search" action="/customer/action" name="cfrm" id="cfrm" method="put">
      <input type="hidden" name="action_val" id ="action_val" value="">
      <div class="pull-right">
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'active');">Make Active</button>
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'inactive');">Make Inactive</button>
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'delete');">Delete</button>
      <%= link_to 'New Customer', new_customer_path ,:class=>"btn btn-inverse"%>
      </div>
      <div class="clearfix"></div>
      <!--div ><b> Total Number Of Records : </b><%=@customers.count%></div-->
   <%if @customers.length > 0%>
      <table class="table table-bordered table-striped">
        <thead>
			<tr>
			    <th><input type="checkbox" onclick="checkAll(document.cfrm);" name="check_all" id="check_all"></th>
			    <th>Customer ID </th>
			    <th>Name</th>
			    <th>Email</th>
			    <th>Licence ID</th>
			    <th>Status</th>
			</tr>
        </thead>
       
        <% @customers.each do |customer| %>
          <thead>
          <tr>
          <td><input type="checkbox" id="iId" value="<%=customer.id%>" name="chk[]" ></td>
          <td><%= link_to customer.customer_id ,edit_customer_path(customer)%></td>
          
          <td><%=customer.name%></td>
          
          <td><%= customer.email %></td>
          <td><%= customer.licence_id %></td>
          <td><%= customer.status.capitalize %></td>
        </tr>
        </thead>
      <% end %>

