
<div class="container-fluid">
  <div class="row-fluid">
  <div class="span10">
      <div class="page-header">
      <h2>Administrators</h2>
      </div>
      <ul class="breadcrumb">
      <li><a href="#">Home</a> <span class="divider">/</span></li>
      <li class="active">Administrators</li>
      </ul>
      <% if flash[:msg]%>
        <div class="alert alert-success">
              <button type="button" class="close" data-dismiss="alert">x</button>
              <strong>Well done!</strong><%=flash[:msg]%>
        </div>
      <%end%>
      <div class="left_topform">
      <form class="form-search" action="/admin" name="sfrm" id="sfrm" method="put">
      <%#form_for '',:controller => 'admins',:url => {:action => 'index'} do -%>
        <%=text_field_tag 'keyword',params[:keyword],:class => 'input-large search-query'%>
        <%=select_tag 'option', options_for_select([["Select Field",""],["Name","first_name"], ["Email","email"],["Status","status"]], params[:option])%>

      <button type="submit" class="btn btn-primary">Search</button>
    <%#end%>
      </form>
      </div>
      <form class="form-search" action="/admin/action" name="cfrm" id="cfrm" method="put">
        <input type="hidden" name="action_val" id ="action_val" value="">

      <div class="pull-right">
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'active');">Make Active</button>
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'inactive');">Make Inactive</button>
      <button type="submit" class="btn btn-inverse" onclick="return Action(document.cfrm,'delete');">Delete</button>
      <%= link_to 'New Administrator', new_admin_path ,:class=>"btn btn-inverse"%>
      </div>
      <div class="clearfix"></div>
      <%if @admins.length > 0%>
      <table class="table table-bordered table-striped ">
        <thead>
        <tr>
          <th><input type="checkbox" onclick="checkAll(document.cfrm);" name="check_all" id="check_all"></th>
          <th>Name</th>
          <th>Email</th>
          <th>Last Login</th>
          <th>Last Login IP</th>
          <th>Status</th>
        </tr>
        </thead>

        <% @admins.each do |admin| %>
          <thead>
          <tr>
          <td><input type="checkbox" id="iId" value="<%=admin.id%>" name="chk[]" ></td>
          <td><%= link_to admin.first_name ,edit_admin_path(admin)%></td>
          <td><%= admin.last_name %></td>
          <td><%= admin.email %></td>
          <td><%= admin.current_ip %></td>
          <td><%= admin.status %></td>
        </tr>
        </thead>
      <% end %>

