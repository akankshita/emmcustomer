<style>
  
        body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
</style>

<div class="container">
<% if flash[:msg]%>
<div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">x</button>
      <strong></strong><%=flash[:msg]%>
</div>
<%end%>
<div id="msg"></div>
  <form class="form-signin" action="/sign_in_act" method="post" name="sfrm" id="sfrm">
    <h2 class="form-signin-heading">Please sign in</h2>
    Email<input type="text" class="input-block-level" placeholder="Email address" id="email" name="email">
    Password<input type="password" class="input-block-level" placeholder="Password" id="pswd" name="pswd">
    <label class="checkbox">
      <input type="checkbox" value="remember-me"> Remember me
    </label>
    <button class="btn btn-large btn-primary" type="button" onclick="return frmsub(document.sfrm);">Sign in</button>
  </form>

</div>
<script>
  function frmsub(frm){
    if ($("#email").val() == "") {
      $("#msg").html('<div class="alert alert-error"><button type="button" class="close" data-dismiss="alert">x</button><strong>Please Your enter Email</strong></div>');
      return false;
    }
    if ($("#pswd").val() == "") {
      $("#msg").html('<div class="alert alert-error"><button type="button" class="close" data-dismiss="alert">x</button><strong>Please Your enter Password</strong></div>');
      return false;
    }
    
    frm.submit();
    return true;
  }
</script>